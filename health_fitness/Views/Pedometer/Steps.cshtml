@{
    ViewData["Title"] = "Enter Steps";
}

<h1>@ViewData["Title"]</h1>

<form asp-controller="Pedometer" asp-action="StepsToCalories" method="post">
    <p>To Calculate your Calories Burned Enter your steps that you took <br /> and click on the Green button </p>
    <div>
        <input type="number" name="stepsnumber" placeholder="Your Steps" style="width:200px;height:40px;text-align:center;font-size:20px;"/>
    </div>
    <br />
        <button type="submit" class="btn btn-success btn-lg">Calculate Calories Burned</button>

</form>